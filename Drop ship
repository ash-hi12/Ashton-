<script>
/*
  Simple client-side store:
  - PRODUCTS is placeholder array. Replace by fetching from your supplier/product CSV or API.
  - On checkout, you should POST cart to server/shopify/woocommerce to create real order & payment.
*/
const PRODUCTS = [
  { id:'p1', title:'Minimal Black Box Logo Hoodie', price:59.99, desc:'Thick fleece, oversized fit. 4 colors', img:'https://picsum.photos/seed/hd1/600/400' },
  { id:'p2', title:'Cream Stussy-Style Tee', price:24.99, desc:'Premium cotton tee, relaxed fit.', img:'https://picsum.photos/seed/hd2/600/400' },
  { id:'p3', title:'Beige Essentials Sweatshorts', price:34.99, desc:'Pull-on shorts, soft terry.', img:'https://picsum.photos/seed/hd3/600/400' },
  { id:'p4', title:'Grey Essentials Oversized Hoodie', price:64.99, desc:'Heavyweight fleece, embroidered logo.', img:'https://picsum.photos/seed/hd4/600/400' },
  { id:'p5', title:'Limited Runner Sneaker (mock)', price:129.99, desc:'Lifestyle runner silhouette.', img:'https://picsum.photos/seed/hd5/600/400' }
];

const productGrid = document.getElementById('productGrid');
const productModal = document.getElementById('productModal');
const modalTitle = document.getElementById('modalTitle');
const modalImg = document.getElementById('modalImg');
const modalDesc = document.getElementById('modalDesc');
const modalPrice = document.getElementById('modalPrice');
const qtyInput = document.getElementById('qty');
const addToCartBtn = document.getElementById('addToCart');
const buyNowBtn = document.getElementById('buyNow');
const closeModalBtn = document.getElementById('closeModal');
const cartButton = document.getElementById('cartButton');
const cartModal = document.getElementById('cartModal');
const cartList = document.getElementById('cartList');
const cartTotalEl = document.getElementById('cartTotal');
const cartCountEl = document.getElementById('cartCount');
const closeCartBtn = document.getElementById('closeCart');
const checkoutBtn = document.getElementById('checkout');
const emptyCartBtn = document.getElementById('emptyCart');

let CURRENT = null;
let CART = JSON.parse(localStorage.getItem('hd_cart')||'[]');

function renderGrid(){
  productGrid.innerHTML = '';
  PRODUCTS.forEach(p=>{
    const el = document.createElement('div');
    el.className='card';
    el.innerHTML = \`
      <div class="img" style="background-image:url('\${p.img}');background-size:cover;background-position:center"></div>
      <div class="title">\${p.title}</div>
      <div class="small">\${p.desc}</div>
      <div class="price">\${format(p.price)}</div>
      <div style="margin-top:10px;display:flex;gap:8px;">
        <button data-id="\${p.id}" class="open">View</button>
        <button data-id="\${p.id}" class="quick" style="background:#111">Quick add</button>
      </div>
    \`;
    productGrid.appendChild(el);
  });
}

function format(n){ return '$'+Number(n).toFixed(2); }

productGrid.addEventListener('click', e=>{
  const open = e.target.closest('button.open');
  const quick = e.target.closest('button.quick');
  if(open){
    const id=open.dataset.id;
    openProduct(id);
  } else if(quick){
    addToCart(quick.dataset.id,1);
  }
});

function openProduct(id){
  const p = PRODUCTS.find(x=>x.id===id);
  CURRENT = p;
  modalTitle.textContent = p.title;
  modalImg.style.backgroundImage = \`url('\${p.img}')\`;
  modalImg.textContent = '';
  modalDesc.textContent = p.desc;
  modalPrice.textContent = format(p.price);
  qtyInput.value = 1;
  productModal.classList.add('open');
}

closeModalBtn.onclick = ()=> productModal.classList.remove('open');

addToCartBtn.onclick = ()=>{
  addToCart(CURRENT.id, Number(qtyInput.value)||1);
  productModal.classList.remove('open');
};

buyNowBtn.onclick = ()=>{
  addToCart(CURRENT.id, Number(qtyInput.value)||1);
  productModal.classList.remove('open');
  openCart();
  // for a real store: redirect to checkout immediately
};

function addToCart(id, qty=1){
  const item = CART.find(i=>i.id===id);
  if(item) item.qty += qty;
  else {
    const p = PRODUCTS.find(x=>x.id===id);
    CART.push({ id:p.id, title:p.title, price:p.price, qty });
  }
  saveCart(); renderCartSummary();
}

function saveCart(){
  localStorage.setItem('hd_cart', JSON.stringify(CART));
}

function renderCartSummary(){
  let total = 0, count=0;
  CART.forEach(i=>{
    total += i.price * i.qty;
    count += i.qty;
  });
  cartTotalEl.textContent = format(total);
  cartCountEl.textContent = count;
}

cartButton.onclick = openCart;
function openCart(){ cartModal.classList.add('open'); renderCart(); }

function closeCart(){ cartModal.classList.remove('open'); }
closeCartBtn.onclick = closeCart;

function renderCart(){
  cartList.innerHTML = '';
  if(CART.length===0){ cartList.innerHTML = '<div class="small">Cart is empty</div>'; return; }
  CART.forEach(i=>{
    const row = document.createElement('div'); row.className='cart-item';
    row.innerHTML = \`
      <div>
        <div style="font-weight:600">\${i.title}</div>
        <div class="small">\${format(i.price)} Ã— \${i.qty}</div>
      </div>
      <div style="text-align:right">
        <div>\${format(i.price * i.qty)}</div>
        <div style="margin-top:6px"><button data-id="\${i.id}" class="remove">Remove</button></div>
      </div>
    \`;
    cartList.appendChild(row);
  });
}

cartList.addEventListener('click', e=>{
  const rem = e.target.closest('button.remove');
  if(rem){
    const id = rem.dataset.id;
    CART = CART.filter(i=>i.id!==id); saveCart(); renderCart(); renderCartSummary();
  }
});

emptyCartBtn.onclick = ()=>{
  CART = []; saveCart(); renderCart(); renderCartSummary();
};

checkoutBtn.onclick = ()=>{
  // Replace this logic with server-side order creation or redirect to Shopify/WooCommerce checkout
  if(CART.length===0){ alert('Cart empty'); return; }
  const order = { items:CART, total:cartTotalEl.textContent, createdAt:new Date().toISOString() };
  // For demo: print order to console and clear cart
  console.log('MOCK ORDER -> send to server / supplier integration:', order);
  alert('Mock order created â€” check console. Integrate with your backend or provider for real checkout.');
  CART=[]; saveCart(); renderCart(); renderCartSummary(); closeCart();
};

// initial render
renderGrid();
renderCartSummary();
</script>
</body>
</html>
